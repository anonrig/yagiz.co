---
interface Props {
  class?: string
  as?: string
}

const variants = {
  wide: 'max-w-[calc(1130px+8vw)]',
  tight: 'max-w-[calc(750px+8vw)]',
}
const props = Astro.props
const size: keyof typeof variants = props.size ?? 'wide'
const Component = props.as ?? 'div'
const className = variants[size]
---

<Component class:list={[props.class, className]} >
  <slot />
</Component>
