---
interface Props {
  class?: string
  as?: string
  size?: 'wide' | 'tight'
}

const { size = 'wide', as = 'div', class: className } = Astro.props
const Component = as
---

<Component class:list={[className, size === 'wide' ? 'max-w-[calc(1130px+8vw)]' : 'max-w-[calc(750px+8vw)]']} >
  <slot />
</Component>
