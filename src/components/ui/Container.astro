---
interface Props {
  class?: string
  as?: string
  size?: 'wide' | 'tight'
}

const props = Astro.props
const size = props.size ?? 'wide'
const Component = props.as ?? 'div'
---

<Component class:list={[props.class, size === 'wide' ? 'max-w-[calc(1130px+8vw)]' : 'max-w-[calc(750px+8vw)]']} >
  <slot />
</Component>
